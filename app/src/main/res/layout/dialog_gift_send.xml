<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_gift_send"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>
    <LinearLayout
        android:id="@+id/ll_indicator_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <!--本例中只有12个礼物-->
        <ImageView
            android:id="@+id/iv_indicator0"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/indicator_selected"
            />
        <ImageView
            android:id="@+id/iv_indicator1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/indicator_normal"
            />
    </LinearLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp">
         <Button
             android:layout_centerInParent="true"
             android:id="@+id/bt_send_gift"
             android:layout_alignParentRight="true"
             android:layout_width="90dp"
             android:layout_height="35dp"
             android:text="发送"
             android:textColor="@color/white"
             android:textSize="20sp"
             android:background="@drawable/shape_gift_send"
             />


     </RelativeLayout>

</LinearLayout>